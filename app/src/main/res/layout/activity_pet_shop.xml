                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold1"
                    android:textSize="20sp"
                    />

            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>

