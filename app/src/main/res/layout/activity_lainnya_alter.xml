<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LainnyaActivityAlter">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/lainnyaBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Lainnya"
            android:background="#A39C9C"
            >

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/lainnyaBar"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/metodeBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Metode Pembayaran"
            android:textSize="20sp"
            android:backgroundTint="#A39C9C"
            android:textAlignment="textStart"
            >
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bantuanBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bantuan"
            android:textSize="20sp"
            android:backgroundTint="#A39C9C"
            android:textAlignment="textStart"
            >
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tentangBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang"
            android:textSize="20sp"
            android:backgroundTint="#A39C9C"
            android:textAlignment="textStart"
            >
        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</RelativeLayout>